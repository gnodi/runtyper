{
  "name": "runtypor",
  "version": "0.1.0",
  "description": "Battle-tested runtime type checker for Typescript using JSON Schema type guards",
  "main": "dist/index.js",
  "typings": "src/index.d.ts",
  "scripts": {
    "prebuild": "mkdir -p dist",
    "build": "test -r dist && rm -rf dist/*; NODE_ENV=production babel src --out-dir dist --extensions \".ts\" --source-maps",
    "lint": "eslint src/**/* test/**/* --ext .js,.ts",
    "lint-fix": "npm run lint -- --fix",
    "pretest": "npm run build",
    "test": "jest --verbose -c=jest.config.js",
    "pretest-coverage": "npm run pretest",
    "test-coverage": "jest -c=jest.config.js --collect-coverage --collect-coverage-from=src/**/*.ts --collect-coverage-from=!src/**/*.d.ts",
    "pretest-coveralls": "npm run pretest",
    "test-coveralls": "jest -c=jest.config.js --collect-coverage --collect-coverage-from=src/**/*.ts --collect-coverage-from=!src/**/*.d.ts && cat ./coverage/lcov.info | coveralls",
    "pretest-watch": "npm run pretest",
    "test-watch": "jest -c=jest.config.js --watch",
    "tsc": "tsc --noEmit",
    "check": "npm run lint && npm run tsc && npm run test-coverage",
    "check-ci": "npm run lint && npm run tsc && npm run test-coveralls",
    "preversion": "npm run check",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm run check && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gnodi/runtypor"
  },
  "keywords": [
    "runtime",
    "type",
    "checker",
    "json",
    "schema",
    "typescript"
  ],
  "author": "Thomas Prelot <tprelot@gmail.com>",
  "license": "SEE LICENSE IN LICENSE",
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "ajv": "^6.12.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/node": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@types/jest": "^25.1.4",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.0",
    "jest": "^25.1.0",
    "ts-jest": "^25.2.1",
    "typescript": "^3.7.4"
  }
}
